<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320px"
        android:layout_marginTop="20px"
        android:src="@drawable/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bl"
        android:layout_marginTop="30px"
        android:layout_marginLeft="320px"
        android:textSize="100px"
        android:textColor="#1A73E9"

        />

    <Button
        android:layout_width="900px"
        android:layout_height="150px"
        android:text="@string/Sign_in"
        android:textSize="50px"
        android:layout_marginLeft="90px"
        android:layout_marginTop="500px"
        android:textColor="#6C92F4"
        android:background="#E6F4FF"
        android:onClick="Sign_in"
        />

    <Button
        android:layout_width="900px"
        android:layout_height="150px"
        android:text="Sign UP"
        android:textSize="50px"
        android:layout_marginLeft="90px"
        android:layout_marginTop="50px"
        android:textColor="#FFFFFF"
        android:background="#1A73E9"
        android:onClick="SignUp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or sign in with "
        android:layout_marginTop="50px"

        android:textSize="50px"
        android:layout_gravity="center"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginTop="50px">

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@drawable/google_logo2"

        />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:src="@drawable/twitter__logo"

        />

</LinearLayout>

</LinearLayout>